{
    "name": "luisrovirosa/parrot-refactoring",
    "description": "Kata to practice Pol(l)ymorphism",
    "authors": [
        {
            "name": "Luis Rovirosa",
            "email": "luisrovirosa@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5.0",
        "squizlabs/php_codesniffer": "^3.5.3"
    },
    "autoload": {
        "psr-4": {
            "Parrot\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "tests": "phpunit",
        "checkcode": "phpcs src --standard=PSR12",
        "fixcode": "phpcbf src --standard=PSR12"
    }
}
